<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F8F8">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="578dp"
        android:background="#75DBE0"
        android:gravity="center"
        android:text="Saving"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="234dp"
        android:background="@drawable/boxshape3"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@color/teal_200"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/pickDateBtn"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="38dp"
        android:layout_toStartOf="@+id/dateTv"
        android:layout_toLeftOf="@+id/dateTv"
        android:background="@drawable/buttonshape"
        android:text="Date"
        android:textColor="@color/black"
        app:backgroundTint="#78D1D2"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="732dp" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/amount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/boxshape3"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="355dp"
        android:layout_toStartOf="@+id/amount"
        android:layout_toLeftOf="@+id/amount"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="Amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:backgroundTint="#78D1D2"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="732dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="ADD"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:backgroundTint="#97DBAE" />


</RelativeLayout>
